# PostgreSQL
POSTGRES_USER=telemetrix
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_DB=telemetrix

# Phoenix
SECRET_KEY_BASE={{ secret_key_base }}

# MQTT
MQTT_USERNAME=telemetrix
MQTT_PASSWORD={{ mqtt_password }}
MQTT_HOST=mosquitto
MQTT_PORT=8883
MQTT_USE_TLS=true
MQTT_CAFILE=/app/priv/certs/mosquitto.crt

# Deployment
PHX_HOST=dashboard.local
PORT=4000

# InfluxDB
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN={{ influx_token }}
DOCKER_INFLUXDB_INIT_PASSWORD={{ influx_password }}
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME={{ influx_user }}
DOCKER_INFLUXDB_INIT_ORG=telemetrix
DOCKER_INFLUXDB_INIT_BUCKET=telemetrix